<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.mobileidforsoldier.UserEditActivity">

    <Button
        android:id="@+id/add_nfc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="출입증을 기기에 태그해서 추가하기"
        android:textSize="18sp" />

    <Button
        android:id="@+id/add_self"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="출입증 정보 입력으로 추가하기"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="* 출입증은 기기당 1개씩만 등록할 수 있습니다."
        android:textSize="18sp" />
</LinearLayout>
